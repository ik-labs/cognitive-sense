{
  "manifest_version": 3,
  "name": "CognitiveSense",
  "version": "1.0.0",
  "description": "Privacy-first cognitive safety agents using Chrome Built-in AI",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-wrapper.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "CognitiveSense"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "chunks/*", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
